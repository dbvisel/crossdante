{
  "name": "crossdante",
  "version": "1.0.0",
  "description": "multi-language dante",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o dist/css app/scss",
    "watch-scss": "node-sass app/scss -wo dist/css",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "build-js": "browserify --debug -d app/js/crossdante.js -t babelify > dist/js/crossdante.js",
    "production-js": "browserify --debug -d app/js/crossdante.js -t babelify > dist/js/crossdante.js && uglifyjs dist/js/crossdante.js -m -o dist/js/crossdante.min.js --source-map dist/js/crossdante.map.js -p relative",
    "lint": "eslint app/js/*.js && eslint app/js/translations/*.js",
    "watch-js": "watchify app/js/crossdante.js -o dist/js/crossdante.js -dv",
    "watch": "npm run watch-scss & npm run watch-js",
    "map": "madge app/js/crossdante.js --image dependencies.jpeg",
    "serve": "browser-sync start --server 'dist' --files 'dist/css/*.css, dist/js/*.js' --index 'index-debug.html' --browser 'google chrome'"
  },
  "author": "Dan Visel",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-latest": "^6.16.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.9.6",
    "browserify": "^13.1.1",
    "eslint": "^3.10.2",
    "madge": "^1.4.3",
    "node-sass": "^3.13.0",
    "uglify-js": "^2.7.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "hammerjs": "^2.0.8",
    "velocity-animate": "^1.3.1"
  }
}
